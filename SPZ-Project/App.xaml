<Application x:Class="SPZ_Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SPZ_Project"
             xmlns:viewModel ="clr-namespace:SPZ_Project.MVVM.ViewModel"
             xmlns:view ="clr-namespace:SPZ_Project.MVVM.View"
             StartupUri="MainWindow.xaml">
    
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Resource/Dictionary-eng.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:RecoveryViewModel}">
                <view:RecoveryView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
                <view:SettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:AboutViewModel}">
                <view:AboutView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DiskInfoViewModel}">
                <view:DiskInfoView/>
            </DataTemplate>



        </ResourceDictionary>
        
        


        
    </Application.Resources>
    
    
</Application>

    